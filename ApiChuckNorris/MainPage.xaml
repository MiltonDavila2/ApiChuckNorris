<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApiChuckNorris.MainPage">


    <StackLayout>
        <ListView x:Name="VistaChiste" 
             
              HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding url}" VerticalOptions="Center" Margin="10,0,0,0"/>
                            <Label Text="{Binding value}" VerticalOptions="Center" Margin="10,0,0,0"/>
                
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </StackLayout>




</ContentPage>

